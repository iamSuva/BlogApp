<!DOCTYPE html>
<html lang="en">
<head>
  <%-include("./partials/head") %>
  <title>home</title>
  <style>
    body{
      background-color: aliceblue;
      padding:0;
      margin: 0;
    }
    .blogcontainer{
     padding: 20px 0px;
      background-color: rgb(28, 28, 42);
    
      height:auto;

    }
    .navbar {
      background-color: rgb(103, 112, 190);
      position: sticky;
      top: 0;
      z-index: 50;
      color: white;
      font-size: 20px;
      font-weight: 600;
    }
  
    .dropdown-menu {
      padding: 10px;
    }
  
    
    .dropdown-item {
      background-color: #e95025;
      
    }
    .card{
      border: 1px slategray;
      border-radius: 15px;
      overflow: hidden;
      background-color:#ffff;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease-in-out;
      
     }
     .card:hover{
      transform: scale(1.05);
     }
     footer {
      background-color: #343a40;
      color: #fff;
      padding: 20px 0;
      transition: transform 0.3s ease-in-out;
    }
    footer:hover{
      background-color: rgb(63, 90, 90);
    }
  </style>
</head>
<body>
     <%-include("./partials/nav") %>
     <!--  <%=JSON.stringify(user)  %> -->
     <!-- <%=JSON.stringify(blogs) %> -->
     <div>
      <%- include("./partials/imageSlider.ejs") %>
     </div>
     <div class="container-fluid blogcontainer">
      <div >
        <% if (blogs.length<1) { %>
         <h4 class="text-center text-light">Hello ,you have not posted anything.</h4>
        <% } else{%>
          
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 px-2 ">
            <% blogs.forEach(blog => { %>
              <div class="col mt-3">
                <div class="card text-center">
                  <a href="/blogs/<%=blog._id %>">
                    <img src="/<%= blog.coverImageUrl %>" class="card-img" alt="..." width="200px" height="150px">
                    <div class="card-body">
                      <h3 class="card-title"><%= blog.title%></h5>
                        
                        <!-- <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> -->
                      </div>
                    </a>
                </div>
              </div>
             
              <% }) %>
            </div>
          </div>


          <% }%>
      </div>
       
        <div>
          <%-include("./partials/footer.ejs")%>
        </div>
    <%-include("./partials/script") %>
</body>
</html>